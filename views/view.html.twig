{% extends ('/blocks/page.html.twig') %}

{% block links %}
  {{ parent() }}
  <link rel='stylesheet' href='/stylesheets/view.css'>
  <link rel="stylesheet" href="/stylesheets/sidebar.css">
{% endblock %}

{% block content %}
  {{ include('partials/sidebar.html.twig') }}
  <div class="container">
    <h1>{{ title }}</h1>
    {% for contribution in contributions %}
      <p>{{contribution.body | raw}}</p>
      <br/>
    {% endfor %}
    {% if latest %}
      <a href="/edit">Contribute</a>
    {% endif %}
  </div>
{% endblock %}
