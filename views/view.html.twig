{% extends ('/blocks/page.html.twig') %}

{% block links %}
  {{ parent() }}
  <link rel='stylesheet' href='/stylesheets/view.css'>
  <link rel="stylesheet" href="/stylesheets/sidebar.css">
  <link href="https://fonts.googleapis.com/css?family=Merriweather:300i&display=swap" rel="stylesheet">
{% endblock %}

{% block content %}
  {{ include('partials/sidebar.html.twig') }}
  <div class="container">
    <h1>{{ title }}</h1>
    <h2>{{ author }}</h2>
    <div id="contributions">
      {% for contribution in contributions %}
        <p>{{contribution.body | raw}}</p>
        <br/>
      {% endfor %}
    </div>
    {% if latest %}
      <button><a href="/edit">Contribute</a></button>
    {% endif %}
  </div>
{% endblock %}
